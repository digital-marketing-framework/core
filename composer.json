{
    "name": "digital-marketing-framework/core",
    "type": "library",
    "description": "Digital Marketing Framework is a data distribution and collection framework.",
    "keywords": [
      "marketing",
      "framework",
      "data",
      "relay"
    ],
    "homepage": "https://www.mediatis.de",
    "license": "GPL-2.0-or-later",
    "authors": [
      {
        "email": "info@mediatis.de",
        "homepage": "https://www.mediatis.de",
        "name": "Mediatis AG",
        "role": "Developer"
      }
    ],
    "require": {
        "php": "^8.1",
        "symfony/yaml": "^5.3.6 || ^6.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.27",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.18.3"
    },
    "autoload": {
      "psr-4": {
        "DigitalMarketingFramework\\Core\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "DigitalMarketingFramework\\Core\\Tests\\": "tests/"
      }
    },
    "scripts": {
      "ci": [
        "@ci:test",
        "@ci:code-quality"
      ],
      "ci:test": [
        "@ci:php:test"
      ],
      "ci:code-quality": [
        "@ci:php:code-quality"
      ],
      "ci:php": [
        "@ci:php:test",
        "@ci:php:code-quality"
      ],

      "ci:php:test": [
        "@ci:php:test-unit",
        "@ci:php:test-integration"
      ],
      "ci:php:test-unit": "./vendor/bin/phpunit --bootstrap vendor/autoload.php --testdox --colors=always tests/Unit/",
      "ci:php:test-integration": "./vendor/bin/phpunit --bootstrap vendor/autoload.php --testdox --colors=always tests/Integration/",

      "ci:php:code-quality": [
        "@ci:php:rector",
        "@ci:php:cs-fixer",
        "@ci:php:phpstan"
      ],
      "ci:php:cs-fixer": "./vendor/bin/php-cs-fixer fix --config .php-cs-fixer.php -v --dry-run --using-cache no --diff src tests",
      "ci:php:rector": "./vendor/bin/rector --dry-run",
      "ci:php:phpstan": "cd .phpstan; php -d memory_limit=228M ../vendor/bin/phpstan --no-progress --no-interaction analyse",

      "fix": [
        "@fix:php"
      ],
      "fix:php": [
        "@fix:php:rector",
        "@fix:php:cs-fixer"
      ],
      "fix:php:rector": "./vendor/bin/rector",
      "fix:php:cs-fixer": "./vendor/bin/php-cs-fixer fix --config .php-cs-fixer.php src tests"
    }
}
