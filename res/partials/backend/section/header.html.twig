<div class="module-docheader">
    <div class="module-docheader-bar module-docheader-bar-navigation">
        <div class="module-docheader-bar-column-left">
            <div class="module-docheader-bar-container">
                <div class="form-group form-group-sm">
                    <select class="form-select form-select-sm" id="section-menu">
                        {% for section in menu %}
                            <option value="{{ uri(section.route) }}"{% if section.active %} selected="selected"{% endif %}>{{ section.label }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>
