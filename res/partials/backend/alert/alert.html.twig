{% set classMap = {0:'success', 1:'warning', 2:'danger'} %}
{% set iconMap = {0:'check', 1:'exclamation', 2:'close'} %}
{% set class = classMap[alert.type] %}
{% set icon = iconMap[alert.type] %}
<div class="callout callout-{{ class }}">
    <div class="media">
        <div class="media-left">
            <span class="icon-emphasized">
                <span class="t3js-icon icon icon-size-small icon-state-default icon-actions-{{ icon }}" data-identifier="actions-{{ icon }}" aria-hidden="true">
                    <span class="icon-markup">
                        <svg class="icon-color">
                            <use xlink:href="{{ asset('EXT:core/Resources/Public/Icons/T3Icons/sprites/actions.svg') }}#actions-{{ icon }}"></use>
                        </svg>
                    </span>
                </span>
            </span>
        </div>
        <div class="media-body">
            <div class="callout-title">{{ alert.title }}</div>
            <div class="callout-body">
                {{ alert.content }}
            </div>
        </div>
    </div>
</div>
